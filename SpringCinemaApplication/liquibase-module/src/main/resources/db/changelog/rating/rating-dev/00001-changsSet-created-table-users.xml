<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <!-- ChangeSet to create the table USER -->
    <changeSet id="users-created-table" author="andres.rpenuela" context="rating-dev">
        <createTable tableName="users">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="USERNAME" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="PASSWORD" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="PASSWORD_BIS" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="EMAIL" type="VARCHAR(255)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="CREATE_AT" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="LAST_LOGIN_AT" type="TIMESTAMP">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <!-- ChangeSet to create the table ROLE -->
    <changeSet id="created-table-roles" author="andres.rpenuela" context="rating-dev">
        <createTable tableName="roles">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints unique="true" nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <!-- ChangeSet to create the table AUTHORITIES -->
    <changeSet id="created-table-authorities" author="andres.rpenuela" context="rating-dev">
        <createTable tableName="authorities">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints unique="true" nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <!-- ChangeSet to create the table SCOPES -->
    <changeSet id="created-table-scopes" author="andres.rpenuela" context="rating-dev">
        <createTable tableName="scopes">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints unique="true" nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <!-- ChangeSet to create the relationship N:N of roles-authorities  -->
    <changeSet id="create-relationship-roles-authorities" author="andres.rpenuela">
        <comment>Created table user_roles for relationship to users with roles</comment>

        <createTable tableName="roles_authorities">
            <column name="ROLE_ID" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="AUTHORITY_ID" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>

        <!-- Agregar clave foránea role_id que referencia a la tabla users -->
        <addForeignKeyConstraint
                baseTableName="roles_authorities"
                baseColumnNames="ROLE_ID"
                referencedTableName="roles"
                referencedColumnNames="ID"
                constraintName="fk_roles_authorities_rol_id" />

        <!-- Agregar clave foránea authority_id que referencia a la tabla roles -->
        <addForeignKeyConstraint
                baseTableName="roles_authorities"
                baseColumnNames="AUTHORITY_ID"
                referencedTableName="authorities"
                referencedColumnNames="ID"
                constraintName="fk_roles_authorities_authority_id" />
    </changeSet>

    <!-- ChangeSet to create the relationship N:N of roles-authorities  -->
    <changeSet id="create-relationship-roles-scopes" author="andres.rpenuela">
        <comment>Created table user_roles for relationship to users with roles</comment>

        <createTable tableName="roles_scopes">
            <column name="ROLE_ID" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="SCOPE_ID" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>

        <!-- Agregar clave foránea role_id que referencia a la tabla users -->
        <addForeignKeyConstraint
                baseTableName="roles_scopes"
                baseColumnNames="ROLE_ID"
                referencedTableName="roles"
                referencedColumnNames="ID"
                constraintName="fk_roles_scope_rol_id" />

        <!-- Agregar clave foránea scope_id que referencia a la tabla roles -->
        <addForeignKeyConstraint
                baseTableName="roles_scopes"
                baseColumnNames="SCOPE_ID"
                referencedTableName="scopes"
                referencedColumnNames="ID"
                constraintName="fk_roles_scopes_scope_id" />
    </changeSet>

    <!-- ChangeSet to create the ChangeSet to create the relationship N:N of users_roles -->
    <changeSet id="create-users-roles-table" author="andres.rpenuela" context="rating-dev">
        <comment>Created table user_roles for relationship to users with roles</comment>

        <createTable tableName="users_roles">
            <column name="USER_ID" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="ROLE_ID" type="BIGINT">
                <constraints nullable="false" />
            </column>
        </createTable>

        <!-- Agregar clave foránea user_id que referencia a la tabla users -->
        <addForeignKeyConstraint
                baseTableName="users_roles"
                baseColumnNames="USER_ID"
                referencedTableName="users"
                referencedColumnNames="ID"
                constraintName="fk_users_roles_user_id" />

        <!-- Agregar clave foránea role_id que referencia a la tabla roles -->
        <addForeignKeyConstraint
                baseTableName="users_roles"
                baseColumnNames="ROLE_ID"
                referencedTableName="roles"
                referencedColumnNames="ID"
                constraintName="fk_users_roles_role_id" />
    </changeSet>
</databaseChangeLog>
