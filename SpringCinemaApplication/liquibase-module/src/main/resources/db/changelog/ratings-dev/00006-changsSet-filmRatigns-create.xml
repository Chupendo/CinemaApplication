<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- ChangeSet to create the USER table -->
    <changeSet id="film-ratings-created-table" author="andres.rpenuela" context="ratings-dev">
        <createTable tableName="film_ratings">
            <column name="ID" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="user_id" type="VARCHAR(13)">
                <constraints nullable="false" />
            </column>
            <column name="film_id" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="score" type="java.math.BigDecimal">
                <constraints nullable="false" />
            </column>
            <column name="CREATED_AT" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false" />
            </column>
            <column name="UPDATED_AT" type="TIMESTAMP">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>